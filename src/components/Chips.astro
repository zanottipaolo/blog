---
type Props = {
  text: string;
  size?: "small" | "medium" | "large";
};

const { text, size = "medium" } = Astro.props;
---

<span
  class={`whitespace-nowrap rounded-full border border-emerald-400 bg-emerald-100 ${size === "small" ? "text-xs" : "text-sm"} px-2.5 py-0.5 text-emerald-700 transition-colors duration-300 hover:bg-emerald-200 dark:border-emerald-700 dark:bg-emerald-700/50 dark:text-emerald-400 dark:hover:bg-emerald-600/50`}
>
  {text}
</span>
