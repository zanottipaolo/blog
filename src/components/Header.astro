---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";

const linkProps = {
  onClick: `closeMenuOnClick()`,
};
---

<header transition:persist id="header">
  <Container>
    <div class="flex flex-col flex-wrap justify-between gap-y-2 sm:flex-row">
      <div class="flex items-center justify-between">
        <Link href="/" underline={false} {...linkProps}>
          <div class="flex items-center gap-4">
            <img
              src="/profile.jpeg"
              class="h-12
                w-12
                rounded-full
                object-cover"
              alt="Profile picture"
            />
            <div class="text-xl font-semibold">
              {SITE.TITLE}
            </div>
          </div>
        </Link>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          aria-label="Mobile menu button"
          class="group flex size-9 items-center justify-center rounded hover:bg-black/5 focus-visible:bg-black/5 dark:hover:bg-white/5 dark:focus-visible:bg-white/5 sm:hidden"
        >
          <!-- hamburger button -->
          <svg
            id="open-menu-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path
              d="M4 18l16 0"></path>
          </svg>

          <!-- close button -->
          <svg
            id="close-menu-icon"
            class="hidden"
            xmlns="http://www.w3.org/2000/svg"
            width="19"
            height="19"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M18 6l-12 12"></path>
              <path d="M6 6l12 12"></path>
            </>
          </svg>
        </button>
      </div>

      <nav
        id="menu"
        class="hidden flex-col flex-wrap items-center gap-4 text-sm sm:flex sm:flex-row"
      >
        <hr class="mt-2 w-full sm:hidden" />
        <Link href="/about" {...linkProps}>about</Link>
        <Link href="/projects" {...linkProps}>projects</Link>
        <Link href="/blog" {...linkProps}>blog</Link>

        <div class="flex flex-wrap items-center gap-1.5">
          <!-- Search -->
          <button
            id="magnifying-glass"
            aria-label="Search"
            class="flex size-9 items-center rounded px-2 py-1 text-xs transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
          >
            <svg
              height="18"
              width="18"
              stroke-linejoin="round"
              viewBox="0 0 16 16"
              style="color: currentcolor;"
              ><path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M3.5 7C3.5 5.067 5.067 3.5 7 3.5C8.933 3.5 10.5 5.067 10.5 7C10.5 7.88461 10.1718 8.69256 9.63058 9.30876L9.30876 9.63058C8.69256 10.1718 7.88461 10.5 7 10.5C5.067 10.5 3.5 8.933 3.5 7ZM9.96544 11.0261C9.13578 11.6382 8.11014 12 7 12C4.23858 12 2 9.76142 2 7C2 4.23858 4.23858 2 7 2C9.76142 2 12 4.23858 12 7C12 8.11014 11.6382 9.13578 11.0261 9.96544L14.0303 12.9697L14.5607 13.5L13.5 14.5607L12.9697 14.0303L9.96544 11.0261Z"
                fill="currentColor"></path></svg
            >
            &nbsp;
          </button>

          <!-- Light -->
          <button
            id="light-theme-button"
            aria-label="Light theme"
            class="group flex size-9 items-center justify-center rounded hover:bg-black/5 focus-visible:bg-black/5 dark:hover:bg-white/5 dark:focus-visible:bg-white/5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-colors duration-300 ease-in-out group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black group-hover:dark:stroke-white dark:group-focus-visible:stroke-white"
            >
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
          </button>

          <!-- Dark -->
          <button
            id="dark-theme-button"
            aria-label="Dark theme"
            class="group flex size-9 items-center justify-center rounded hover:bg-black/5 focus-visible:bg-black/5 dark:hover:bg-white/5 dark:focus-visible:bg-white/5"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-colors duration-300 ease-in-out group-hover:stroke-black group-focus-visible:animate-pulse group-focus-visible:stroke-black group-hover:dark:stroke-white dark:group-focus-visible:stroke-white"
            >
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </button>
        </div>
      </nav>
    </div>
  </Container>
</header>
