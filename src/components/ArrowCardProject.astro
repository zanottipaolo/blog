---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"projects">;
};

const { entry } = Astro.props as {
  entry: CollectionEntry<"projects">;
};
---

<a
  href={entry.data.demoURL}
  target="_blank"
  rel="noopener noreferrer"
  class="not-prose group relative flex flex-nowrap rounded-lg border border-black/15 px-4 py-3 transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
>
  <div class="flex flex-1 flex-col">
    <img
      src={entry.data.imgURL}
      class="mb-4 aspect-video rounded-md object-cover"
    />
    <div class="font-semibold">
      {entry.data.title} â€¢ {entry.data.date.getFullYear()}
    </div>
    <div class="text-sm">
      {entry.data.description}
    </div>
  </div>
</a>
