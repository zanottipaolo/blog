---
interface Props {
  date: Date;
  showYear: boolean;
}

const { date, showYear = false } = Astro.props;

const options: Intl.DateTimeFormatOptions = {
  month: "long",
  day: "2-digit",
};

if (showYear) {
  options.year = "numeric";
}
---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString("en-GB", options)}
</time>
