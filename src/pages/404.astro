---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import BackToPrevious from "@components/BackToPrevious.astro";
import { SITE } from "@consts";
---

<Layout title="Not found" description={SITE.DESCRIPTION}>
  <Container>
    <div class="mt-16 grid place-items-center gap-3" data-pagefind-ignore>
      <h1
        class="animate text-center text-2xl font-semibold text-black dark:text-white"
      >
        Page not found ❗️
      </h1>

      <p class="animate mb-4 text-center">
        The page you searched for is wrong or does not exist.
      </p>

      <span class="animate">
        <BackToPrevious href="/">Go to home page</BackToPrevious>
      </span>
    </div>
  </Container>
</Layout>
